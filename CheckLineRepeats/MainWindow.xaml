<Window x:Class="CheckLineRepeats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckLineRepeats"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="LOAD A FILE" VerticalAlignment="Top" Width="638" Height="432" Grid.RowSpan="2"/>
        </Grid>
        <Button BorderThickness="0" HorizontalAlignment="Left" Width="160">
            <TextBlock TextAlignment="Center" FontSize="56" FontWeight="Bold">
                OPEN
                <LineBreak/>
                FILE
            </TextBlock>
        </Button>
    </Grid>
</Window>
